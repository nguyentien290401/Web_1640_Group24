@model List<Web_1640_Group24.Models.Idea>
@{
    ViewBag.Title = "Index";
}

<h2>All Ideas</h2>

<table class="table">
    <tr>
        <td>Idea Name</td>
        <td>Date And Time</td>
        <td>DepartmentID</td>
        <td>Category ID</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IdeaName</td>
            <td>@item.IdeaDateAndTime</td>
            <td>@item.DepartmentID</td>
            <td>@item.CategoryID</td>
        </tr>
    }

</table>

